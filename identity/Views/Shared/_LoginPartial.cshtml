@using Microsoft.AspNetCore.Identity
@using identity.Areas.Identity.Data
@inject SignInManager<identityUser> SignInManager
@inject UserManager<identityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
            </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="index" asp-area="Identity" asp-page="/Account/Index">Index</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="PersonalData" asp-area="Identity" asp-page="/Account/PersonalData">PersonalData</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="SetPassword" asp-area="Identity" asp-page="/Account/ForgotPassword">ForgotPassword</a>
        </li>

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
